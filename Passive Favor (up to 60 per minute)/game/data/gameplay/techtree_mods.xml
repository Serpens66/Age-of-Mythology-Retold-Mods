<techtreemods>

  <!-- increase tickle by advancing in ages (amount is added on top of already added amount, so in mythic is is +1 per second) -->

  <!-- specificage prereqs is a minimum, so ArchaicAge is always true, even while we are in MythicAge -->
    
  <!-- with an OBTAINABLE+Volatile tech we can start our tech code on new games and on savegames for every civ.  -->
   <!-- the OBTAINABLE+Volatile tech can not handle prereqs good, so we will change status from other techs in it which will do the prereqs code -->
  <!-- we use Volatile techs with specificage (instead of adding tickle tech to eg. ClassicalAgeGeneral) to have it compatible to savegames enabling this mod -->
  <!-- needs the delay in StartTickleFavorCode_Serp for whatever reason to work properly for new and savegames -->
  <tech mergeMode="add" name="StartTickleFavorCode_Serp">
    <status>OBTAINABLE</status>
    <delay>1.0000</delay>
    <flag>HideAllNotifications</flag>
    <flag>DelayedFirstActivation</flag>
    <flag>Volatile</flag>
    <effects>
      <effect mergeMode="add" type="TechStatus" status="obtainable">ArchaicTickleFavor_Serp</effect>
      <effect mergeMode="add" type="TechStatus" status="obtainable">ClassicalTickleFavor_Serp</effect>
      <effect mergeMode="add" type="TechStatus" status="obtainable">HeroicTickleFavor_Serp</effect>
      <effect mergeMode="add" type="TechStatus" status="obtainable">MythicTickleFavor_Serp</effect>
    </effects>
  </tech>
  
  <tech mergeMode="add" name="ArchaicTickleFavor_Serp">
    <status>UNOBTAINABLE</status>
    <delay>1.0000</delay>
    <flag>HideAllNotifications</flag>
    <flag>DelayedFirstActivation</flag>
    <flag>Volatile</flag>
    <prereqs>
      <specificage>ArchaicAge</specificage>
    </prereqs>
    <effects>
      <effect mergeMode="add" type="Data" amount="0.1" subtype="ResourceTrickleRate" resource="Favor" relativity="Absolute">
        <target type="Player">
        </target>
      </effect>
    </effects>
  </tech>
  <tech mergeMode="add" name="ClassicalTickleFavor_Serp">
    <status>UNOBTAINABLE</status>
    <delay>1.0000</delay>
    <flag>HideAllNotifications</flag>
    <flag>DelayedFirstActivation</flag>
    <flag>Volatile</flag>
    <prereqs>
      <specificage>ClassicalAge</specificage>
    </prereqs>
    <effects>
      <effect mergeMode="add" type="Data" amount="0.2" subtype="ResourceTrickleRate" resource="Favor" relativity="Absolute">
        <target type="Player">
        </target>
      </effect>
    </effects>
  </tech>
  <tech mergeMode="add" name="HeroicTickleFavor_Serp">
    <status>UNOBTAINABLE</status>
    <delay>1.0000</delay>
    <flag>HideAllNotifications</flag>
    <flag>DelayedFirstActivation</flag>
    <flag>Volatile</flag>
    <prereqs>
      <specificage>HeroicAge</specificage>
    </prereqs>
    <effects>
      <effect mergeMode="add" type="Data" amount="0.3" subtype="ResourceTrickleRate" resource="Favor" relativity="Absolute">
        <target type="Player">
        </target>
      </effect>
    </effects>
  </tech>
  <tech mergeMode="add" name="MythicTickleFavor_Serp">
    <status>UNOBTAINABLE</status>
    <delay>1.0000</delay>
    <flag>HideAllNotifications</flag>
    <flag>DelayedFirstActivation</flag>
    <flag>Volatile</flag>
    <prereqs>
      <specificage>MythicAge</specificage>
    </prereqs>
    <effects>
      <effect mergeMode="add" type="Data" amount="0.4" subtype="ResourceTrickleRate" resource="Favor" relativity="Absolute">
        <target type="Player">
        </target>
      </effect>
    </effects>
  </tech>
    
